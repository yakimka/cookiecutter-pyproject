{
  "main_branch": "main",
  "project_name": "my-awesome-project",
  "module_name": "{{ cookiecutter.project_name.lower().replace('-', '_') }}",
  "project_description": "My awesome project",
  "github_username": "yakimka",
  "dockerhub_username": "{{ cookiecutter.github_username }}",
  "minimum_python_version": "3.10",
  "maximum_python_version": "3.14",
  "linter": ["ruff", "flake8"],
  "max_line_length": "88",
  "pydantic_support": false,
  "fastapi_support": false,
  "force_typing": false,
  "dependency_updater": ["dependabot", "renovate", "none"],
  "__prompts__": {
    "main_branch": "Name of the main git branch",
    "project_name": "Project name (also used as package name)",
    "module_name": "Python module name (should be a valid Python identifier)",
    "project_description": "Short description of the project",
    "github_username": "GitHub username",
    "dockerhub_username": "DockerHub username",
    "minimum_python_version": "Minimum supported Python version",
    "maximum_python_version": "Maximum supported Python version",
    "linter": "Choose a linter",
    "max_line_length": "Maximum line length for the linter",
    "pydantic_support": "Enable mypy plugin and flake8-type-checking settings",
    "fastapi_support": "Enable flake8-type-checking settings (only for flake8 linter)",
    "force_typing": "Enable mypy strict typing settings",
    "dependency_updater": "Choose a dependency updater"
  },

  "_copy_without_render": [
    ".venv",
    "docs/_build"
  ]
}
